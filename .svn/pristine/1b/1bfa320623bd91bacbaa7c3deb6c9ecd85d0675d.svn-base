<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alpha.user.mapper.UserInfoMapper">


    <!-- 根据条件查询其它-->
    <select id="getSequence" resultType="com.alpha.commons.core.pojo.SysSequence">
			SELECT id,sequence_key,current_value,increment FROM sys_sequence where sequence_key=#sequence_key
    </select>

    <!-- update Current Value -->
    <select id="updateCurrentValue" resultType="java.lang.Integer">
			UPDATE  sys_sequence SET current_value=#newCurrentValue where sequence_key=#sequence_key and current_value=#oldCurrentValue
    </select>


</mapper>